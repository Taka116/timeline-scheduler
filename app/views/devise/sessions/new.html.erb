<div class="text-center" style="padding:50px 0">
	<div class="logo">login</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<%= form_for(@user, as: @user, url: user_session_path(@user), html: {id: "login-form", class: "text-left"}) do |f| %>
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
  				<div class="login-group">
  					<div class="form-group">
  						<%= f.label :email, class: "sr-only"  %><br />
  						<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
  					</div>
  					<div class="form-group">
  					  <%= f.label :password, class: "sr-only"  %><br />
              		   <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %>
  					</div>
  					
    				<%= f.submit "login", class: "login-button" do %>
    				  <i class="fa fa-chevron-right"></i>
    				<% end %>
  				</div>
  			</div>
  		<% end %>
  		<div class="etc-login-form">
  		  <%= render "devise/shared/links" %>
  		</div>
	</div>
	<!-- end:Main Form -->
</div>
